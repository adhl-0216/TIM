extends layout 

block content 
  .card   

    .card-header
      .d-flex
          
        h1 #{job.title}
        span.text-muted.ms-auto
          p #{job.dateCreated.substring(0,10)}
      h5.m-0= job.address

    .card-body
      .row
        .col-md-9
          p= job.description
          p.fw-bold Hourly Rate : &euro; #{job.hourlyRate}
          p.fw-bold Weekly hours : #{job.weeklyHours}

          #badges.mt-auto.row.gap-2
              #schedule
                each day in job.schedule
                  span.badge.rounded-pill.bg-info.mx-1= day 
              #tags
                each tag in job.tags
                  span.badge.rounded-pill.bg-primary.mx-1= tag  
            
        .col-md-3.d-flex
          button.btn.btn-outline-primary.ms-auto.mt-auto(href='#') Quick Apply
