extends layout 

block content 
  .card   

    .card-header
      .d-flex.gap-3
          
        h1= job.title
        .text-muted.ms-auto
          p #{job.dateCreated.substring(0,10)}
      p.m-0= job.address

    .card-body.pb-1
      #tags.p-1
        each tag in job.tags
          span.badge.rounded-pill.bg-primary.mx-1= tag  
      
      #schedule.p-1
        each day in job.schedule
          span.badge.rounded-pill.bg-info.mx-1= day 
    .card-body.py-1.px-0.mx-3.row
      .col-md-9.ps-4
        p.ms-3= job.description
        p.fw-bold Hourly Rate : &euro; #{job.hourlyRate}
        p.fw-bold Weekly hours : #{job.weeklyHours}
      
      .col-md-3.d-flex.pe-0
        .align-self-end.ms-auto.mb-2
          button.btn.btn-outline-primary(href='#') Quick Apply
